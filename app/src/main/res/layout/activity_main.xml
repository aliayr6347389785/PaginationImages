<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/et_request"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="20sp"
        android:hint="Title"
        android:textSize="16sp"
        android:paddingStart="20sp"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_request"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20sp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/purple_200"
        android:text="request"
        app:cornerRadius="20sp"
        app:layout_constraintTop_toBottomOf="@id/et_request"
        tools:layout_editor_absoluteX="-46dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_request2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20sp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/purple_200"
        android:text="request"
        app:cornerRadius="20sp"
        app:layout_constraintTop_toBottomOf="@id/et_request"
        tools:layout_editor_absoluteX="-46dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_request3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20sp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/purple_200"
        android:text="request"
        app:cornerRadius="20sp"
        app:layout_constraintTop_toBottomOf="@id/et_request"
        tools:layout_editor_absoluteX="-46dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_request4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20sp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/purple_200"
        android:text="request"
        app:cornerRadius="20sp"
        app:layout_constraintTop_toBottomOf="@id/et_request"
        tools:layout_editor_absoluteX="-46dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_next"
        app:cornerRadius="20sp"
        app:layout_constraintTop_toBottomOf="@id/btn_request"
        android:text="next"
        android:backgroundTint="@color/purple_200"
        android:layout_margin="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <androidx.recyclerview.widget.RecyclerView
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="2"
        android:layout_marginTop="20sp"
        android:id="@+id/rv_images"
        tools:listitem="@layout/item_image"
        app:layout_constraintTop_toBottomOf="@id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>